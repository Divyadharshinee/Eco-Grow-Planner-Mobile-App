<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Light Icon -->
    <ImageView
        android:id="@+id/lightIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/light_bulb"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Light Level Text -->
    <TextView
        android:id="@+id/lightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light Level: -- lux"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/lightIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="16dp"/>

    <!-- Circular Progress Bar -->
    <ProgressBar
        android:id="@+id/lightProgress"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:indeterminate="false"
        android:max="10000"
        android:progress="0"
        style="?android:attr/progressBarStyle"
        android:progressDrawable="@drawable/circular_progress"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/lightValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- Light Level Description -->
    <TextView
        android:id="@+id/lightDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detecting Light Level..."
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/lightProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="12dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>
