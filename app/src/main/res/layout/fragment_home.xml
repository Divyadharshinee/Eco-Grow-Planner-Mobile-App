<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green"
        android:padding="16dp">

        <!-- Identify Plant Section -->
        <LinearLayout
            android:id="@+id/layout_identify_plant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="identifyPlant"
            android:background="@drawable/border_black"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Identify Plant"
                android:drawableStart="@drawable/plant"
                android:background="@drawable/black"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="00dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/ic_identify"
                android:layout_marginStart="8dp"/>
        </LinearLayout>



        <!-- Identify Disease Section -->
        <LinearLayout
            android:id="@+id/layout_identify_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="diagnosePlant"
            android:background="@drawable/border_black"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Identify Disease"
                android:drawableStart="@drawable/disease"
                android:background="@drawable/black"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/ic_disease"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Diagnose Plant Section -->
        <LinearLayout
            android:id="@+id/layout_diagnose_disease"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:clickable="true"
            android:onClick="diagnosePlant"
            android:background="@drawable/border_black"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Diagnose Plant"
                android:background="@drawable/black"
                android:drawableStart="@drawable/diagnose_1"
                android:gravity="center"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/ic_diagnose"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Check Weather Section -->
        <LinearLayout
            android:id="@+id/layout_check_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border_black"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Check Weather "
                android:background="@drawable/black"
                android:drawableStart="@drawable/weather"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="3"
                android:src="@drawable/ic_gweather"
                android:layout_marginStart="8dp"/>
        </LinearLayout>


        <!-- Care Tools Section -->
        <TextView
            android:layout_width="360dp"
            android:layout_height="70dp"
            android:background="@drawable/border_black"
            android:drawableStart="@drawable/plant_care"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="Care Tools"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- First Row of Care Tools -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Water Reminder -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_wat_rem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_water_reminder"
                            android:contentDescription="Water Reminder" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Water Reminder"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Fertilizer Reminder -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_fet_rem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_fertilizer"
                            android:contentDescription="Fertilizer Reminder" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Fertilizer Reminder"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Light Meter -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_light_meter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_light_meter"
                            android:contentDescription="Light Meter"
                            android:background="@drawable/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Light Meter"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Second Row of Care Tools -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Water Calculator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_wat_calc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_water_calculator"
                            android:contentDescription="Water Calculator"
                            android:background="@drawable/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Water Calculator"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Fertilizer Calculator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_fet_calc"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_fertilizer_calculator"
                            android:contentDescription="Fertilizer Calculator"
                            android:background="@drawable/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Fertilizer Calculator"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

                <!-- Prune Plants -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginStart="8dp">

                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp">

                        <ImageView
                            android:id="@+id/img_prune"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_prune"
                            android:contentDescription="Prune Plants"
                            android:background="@drawable/black"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="Prune Plants"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:background="@color/black"
                            android:alpha="0.6"/>
                    </FrameLayout>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
