<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- CardView for Spinners to make them stand out -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:padding="8dp">

        <Spinner
            android:id="@+id/spinnerClimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:padding="8dp">

        <Spinner
            android:id="@+id/spinnerSoil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:padding="8dp">

        <Spinner
            android:id="@+id/spinnerPlantType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/spinner_background"/>
    </androidx.cardview.widget.CardView>

    <!-- Modern Material Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filter Plants"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:textSize="16sp"
        android:backgroundTint="@color/green1"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"/>

    <!-- Stylish TextView for Filtered Plants -->
    <TextView
        android:id="@+id/txtFilteredPlants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Filtered Plants will appear here"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:paddingTop="10dp" />

    <!-- RecyclerView inside CardView for floating effect -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:padding="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPlants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
