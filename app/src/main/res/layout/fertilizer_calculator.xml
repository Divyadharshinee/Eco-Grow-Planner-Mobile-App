<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    android:gravity="center">



    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertilizer Calculator"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp"/>

    <!-- Plant Name Input -->
    <EditText
        android:id="@+id/edt_plant_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Plant Name"
        android:inputType="textCapWords"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="center"/>

    <!-- Plant Size Input -->
    <EditText
        android:id="@+id/edt_plant_size"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Plant Size (cm)"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="8dp"/>

    <!-- Fertilizer Amount Display -->
    <TextView
        android:id="@+id/txt_fertilizer_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fertilizer Required: 0 grams"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="center"/>

</LinearLayout>
