<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/green"
        android:padding="3dp">

        <!-- Diagnose Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_black"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagnose"
                android:background="@drawable/black"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:drawableStart="@drawable/diagnose_1"
                android:textStyle="bold"
                android:paddingVertical="3dp"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="3dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="90dp"
                        android:layout_height="match_parent"/>

                    <!-- Identify Disease -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="115dp"
                            android:layout_height="100dp">

                            <!-- Image -->
                            <ImageView
                                android:id="@+id/btn_identify_disease"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black"
                                android:contentDescription="Identify Disease"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_identify" />

                            <!-- Text Over Image -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Identify Disease"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Disease Treatment -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="115dp"
                            android:layout_height="100dp">

                            <!-- Image -->
                            <ImageView
                                android:id="@+id/btn_treatment"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/black"
                                android:contentDescription="Disease Treatment"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_diagnose" />

                            <!-- Text Over Image -->
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.6"
                                android:background="@color/black"
                                android:gravity="center"
                                android:text="Disease Treatment"
                                android:textColor="@android:color/white"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>



    <!-- Parent Layout for Common Problems Section -->
        <LinearLayout
            android:id="@+id/commonProblemsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_black"
            android:padding="6dp"
            android:gravity="center_horizontal">

            <!-- Separate Layout for TextView -->
            <LinearLayout
                android:id="@+id/textViewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/black"
                android:paddingVertical="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Common Problems"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/problem" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Yellowing -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_chlorosis"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/chlorosis"
                                    android:contentDescription="Yellowing"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.6"
                                    android:gravity="center"
                                    android:text="Yellowing"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Brown Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_brown_tips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/brown_tips"
                                    android:contentDescription="Brown Tips"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Brown Tips"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Mold and Mildew -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_mold_mildew"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/mold_mildew"
                                    android:contentDescription="Mold and Mildew"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Mold  Mildew"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Root Rot -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_rootrot"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/rootrot"
                                    android:contentDescription="Root Rot"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.6"
                                    android:gravity="center"
                                    android:text="Root Rot"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Wilting Leaves -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_wiltingleaves"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/wilting_leaves"
                                    android:contentDescription="Wilting Leaves"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.6"
                                    android:gravity="center"
                                    android:text="Wilting Leaves"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Sunburned Leaves -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginEnd="10dp"> <!-- Spacing Added -->

                                <ImageView
                                    android:id="@+id/img_sunburned"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/sunburned"
                                    android:contentDescription="Sunburned Leaves"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:alpha="0.6"
                                    android:gravity="center"
                                    android:text="Sunburned Leaves"
                                    android:textColor="@android:color/white"
                                    android:textSize="12sp"
                                    android:textStyle="bold"/>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <!-- Parent Layout for Plant Care Tips Section -->
        <LinearLayout
            android:id="@+id/plantCareTipsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:background="@drawable/border_black"
            android:padding="6dp"
            android:gravity="center_horizontal">

            <!-- Title Layout -->
            <LinearLayout
                android:id="@+id/textViewLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/black"
                android:paddingVertical="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plant Care Tips"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/care"/>
            </LinearLayout>

            <!-- Image Tips Layout -->
            <LinearLayout
                android:id="@+id/imageLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Watering Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_watering_tips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/water"
                                    android:contentDescription="Watering Tips" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Watering"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Fertilizing Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_fertilizing_tips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/fertilizer"
                                    android:contentDescription="Fertilizing Tips" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Fertilizing"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Sunlight Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_sunlight_tips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/sun"
                                    android:contentDescription="Sunlight Tips" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Sunlight"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Soil Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_soiltips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/soiltips"
                                    android:contentDescription="Soil Tips" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Soil Tips"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Pest Control Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_pestcontroltips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/pest"
                                    android:contentDescription="Pest Control Tips"
                                    android:background="@drawable/black"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Pest Control"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:background="@color/black"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                        <!-- Air & Humidity Tips -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"> <!-- Increased spacing -->

                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:id="@+id/img_airandhumiditytips"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/humidity"
                                    android:contentDescription="Air  Humidity Tips"
                                    android:background="@drawable/black"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Humidity"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/white"
                                    android:background="@color/black"
                                    android:alpha="0.6"/>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <!-- Cultivation Tips Section -->
        <LinearLayout
            android:id="@+id/cultivationTipsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_black"
            android:padding="8dp"
            android:gravity="center_horizontal">

            <!-- TextView for Cultivation Tips -->
            <LinearLayout
                android:id="@+id/textViewLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/gray"
                android:paddingVertical="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cultivation Tips"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="center"
                    android:background="@drawable/black"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/cultivation"/>
            </LinearLayout>

            <!-- Horizontal Scroll View for Images -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Soil Preparation -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <ImageView
                                android:id="@+id/img_soil_prep"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/soil"
                                android:contentDescription="Soil Preparation"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Soil Preparation"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@android:color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Crop Rotation -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <ImageView
                                android:id="@+id/img_crop_rotation"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/irrigation"
                                android:contentDescription="Crop Rotation"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Crop Rotation"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@android:color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Composting -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <ImageView
                                android:id="@+id/img_composting"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/composting"
                                android:contentDescription="Composting"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Composting"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@android:color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Germination Tips -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <ImageView
                                android:id="@+id/img_seedStartingGerminationTips"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/germination"
                                android:contentDescription="Germination Tips"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Germination"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@android:color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Attracting Pollinators -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
                            android:layout_width="80dp"
                            android:layout_height="80dp">

                            <ImageView
                                android:id="@+id/img_pollinators"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pollinators"
                                android:contentDescription="Attracting Pollinators"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="Pollinators"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:background="@android:color/black"
                                android:alpha="0.6"/>
                        </FrameLayout>
                    </LinearLayout>

                    <!-- Organic Fertilization Techniques -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginEnd="10dp"> <!-- Space between items -->

                        <FrameLayout
