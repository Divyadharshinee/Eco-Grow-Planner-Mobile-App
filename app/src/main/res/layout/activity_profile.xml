<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic2"
    android:padding="20dp"
    tools:context=".ProfileActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="Create Your Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/gray"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"/>

    <!-- CardView Container for Form -->
    <!-- CardView Container for Form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:layout_marginTop="50dp"
        app:cardElevation="6dp"
       android:padding="20dp"
       android:background="@color/green2">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green2"
            android:orientation="vertical">

            <!-- Garden Location -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Garden Location"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/locationField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_field_background"
                android:hint="Enter garden location"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#333333" />

            <!-- Garden Size -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Garden Size (in sq. ft.)"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/sizeField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_field_background"
                android:hint="Enter garden size"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:textColor="#333333" />

            <!-- Gardening Experience -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Gardening Experience (years)"
                android:textColor="#333333"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/experienceField"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_field_background"
                android:hint="Enter gardening experience"
                android:inputType="number"
                android:padding="12dp"
                android:textColor="#333333" />

            <!-- Save Profile Button -->
            <Button
                android:id="@+id/saveProfileButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/green1"
                android:elevation="6dp"
                android:text="Save Profile"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
